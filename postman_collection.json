{
    "info": {
      "name": "Medical API (UUID CRUD)",
      "_postman_id": "abc12345-def6-7890-ghij-klmnopqrstuv",
      "description": "Postman Collection for managing doctors, specialties, patients, and appointments using UUID-based CRUD.",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:3000"
      }
    ],
    "item": [
      {
        "name": "Doctors",
        "item": [
          {
            "name": "Get All Doctors",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{base_url}}/doctors",
                "host": ["{{base_url}}"],
                "path": ["doctors"]
              }
            }
          },
          {
            "name": "Create Doctor",
            "request": {
              "method": "POST",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"Dr. Jane Smith\",\n  \"email\": \"jane.smith@clinic.com\",\n  \"specialty_id\": \"{{specialty_id}}\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/doctors",
                "host": ["{{base_url}}"],
                "path": ["doctors"]
              }
            }
          },
          {
            "name": "Update Doctor",
            "request": {
              "method": "PUT",
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"Dr. Updated Name\",\n  \"email\": \"updated@clinic.com\",\n  \"specialty_id\": \"{{specialty_id}}\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/doctors/{{doctor_id}}",
                "host": ["{{base_url}}"],
                "path": ["doctors", "{{doctor_id}}"]
              }
            }
          },
          {
            "name": "Delete Doctor",
            "request": {
              "method": "DELETE",
              "url": {
                "raw": "{{base_url}}/doctors/{{doctor_id}}",
                "host": ["{{base_url}}"],
                "path": ["doctors", "{{doctor_id}}"]
              }
            }
          }
        ]
